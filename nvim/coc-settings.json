{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false,
  "coc.preferences.formatOnSave": true,
  "stylelintplus.autoFixOnSave": true,
  "eslint.autoFixOnSave": false,
  "diagnostic-languageserver.formatters": {
    "stylua": {
      "command": "stylua",
      "args": [
        "--search-parent-directories",
        "--stdin-filepath",
        "%filepath",
        "--",
        "-"
      ]
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "lua": "stylua"
  }
}
